{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@now/node"
        },
        {
            "src": "package.json",
            "use": "@now/next",
            "config": { "distDir": "public" }
        }
    ],
    "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/"
        },
        {
          "src": "/(.*)",
          "dest": "/$1"
        }
    ]
}